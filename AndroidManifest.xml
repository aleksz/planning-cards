<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ee.ignite.planningcards"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ee.ignite.planningcards.CardsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ee.ignite.planningcards.CardActivity"
            android:label="@string/title_activity_card"
            android:screenOrientation="portrait"
            android:parentActivityName="ee.ignite.planningcards.CardsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ee.ignite.planningcards.CardsActivity" />
        </activity>
    </application>

</manifest>